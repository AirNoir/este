{
  "env": {
    "development": {
      "presets": ["next/babel"],
      "plugins": [
        ["transform-define", "./scripts/env-config.js"]
      ]
    },
    "production": {
      "presets": ["next/babel"],
      "plugins": [
        ["transform-define", "./scripts/env-config.js"]
      ]
    },
    "test": {
      // next/babel does not transpile import/export syntax.
      // So, using es2015 in the beginning will fix that.
      // github.com/zeit/next.js/tree/master/examples/with-jest
      "presets": ["es2015", "next/babel"],
      "plugins": [
        ["transform-define", "./scripts/env-config.js"]
      ]
    }
  }
}
